{
  "compilerOptions": {
    "jsx": "react-jsx",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },

  "typeRoots": [
    "./node_modules/@types",
    "./src/types"
  ],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
